{
  "extends": ["tslint:latest", "tslint-config-prettier"],
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-implicit-dependencies": [true, ["typesafe-actions"]],
    "no-submodule-imports": [true, "bulma", "src/components"],
    "interface-name": [true, "never-prefix"]
  }
}
